# Démarrer avec une image PHP 8.2 en ligne de commande
FROM php:8.2-cli

# Définir le répertoire de travail
WORKDIR /var/www/html

# Installer les dépendances nécessaires (libzip, git, etc.)
RUN apt-get update && \
    apt-get install -y libzip-dev unzip git && \
    docker-php-ext-install pdo pdo_mysql zip

# Installer Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Copier ton backend dans le conteneur
COPY backend/ /var/www/html

# Donner les bons droits au fichier artisan
RUN chmod +x /var/www/html/artisan

# Changer les droits sur le répertoire
RUN chown -R www-data:www-data /var/www/html

# Installer les dépendances PHP via Composer
RUN composer install --verbose

# Donner les bons droits sur les répertoires de stockage de Laravel
RUN chown -R www-data:www-data storage bootstrap/cache && \
    chmod -R 775 storage bootstrap/cache

# Déclarer un volume pour le dossier storage afin de persister les données
VOLUME ["/var/www/html/storage"]

# Ouvrir le port 1000
EXPOSE 1000

# Lancer Laravel en exécutant les migrations, la configuration et le serveur
CMD php artisan migrate --force && \
    php artisan config:cache && \
    php artisan storage:link && \
    php artisan serve --host=0.0.0.0 --port=${PORT:-1000}
