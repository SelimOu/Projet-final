# Utiliser une image officielle PHP sans Apache
FROM php:8.2-cli
# Définir le répertoire de travail
WORKDIR /var/www/html

# Installer les extensions PHP nécessaires
RUN docker-php-ext-install pdo pdo_mysql

# Installer les outils nécessaires pour Composer
# Installer les extensions PHP nécessaires et les outils nécessaires pour Composer
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    && docker-php-ext-install pdo pdo_mysql \
    && rm -rf /var/lib/apt/lists/*

# Copier les fichiers de l'application dans le conteneur
COPY . /var/www/html

# Installer les dépendances de Composer
RUN curl -sS https://getcomposer.org/installer | php
RUN php composer.phar install --no-dev --optimize-autoloader

# Changer les permissions pour le dossier de l'application
RUN chown -R www-data:www-data /var/www/html
RUN curl -sS https://getcomposer.org/installer | php \
    && php composer.phar install --no-dev --optimize-autoloader \
    && chown -R www-data:www-data /var/www/html

# Exposer le port 9200
EXPOSE 9200
# Démarrer Laravel avec php artisan serve sur le port 9200
CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=9200"]